{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "src/**/*.{js,ts}",
    "!src/**/*.test.{js,ts}",
    "!src/**/__tests__/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "testMatch": [
    "**/__tests__/**/*.{js,ts}",
    "**/*.test.{js,ts}"
  ]
}